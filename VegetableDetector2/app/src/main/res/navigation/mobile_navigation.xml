<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.vegetabledetector.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <!-- Add action from home to detected vegetable -->
        <action
            android:id="@+id/action_nav_home_to_detectedVegetableFragment"
            app:destination="@id/detectedVegetableFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.vegetabledetector.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.vegetabledetector.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/detectedVegetableFragment"
        android:name="com.example.vegetabledetector.ui.detected.DetectedVegetableFragment"
        android:label="Detected Vegetable"
        tools:layout="@layout/fragment_detected_vegetable">

        <!-- Add action from detected vegetable to recipes -->
        <action
            android:id="@+id/action_detectedVegetableFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.vegetabledetector.ui.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipes" />
</navigation>
