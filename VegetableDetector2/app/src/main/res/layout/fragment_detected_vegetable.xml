<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        android:padding="24dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/vegetable_name"
            android:text="Your Veggie Match"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#7C4DFF"
            android:background="@drawable/rounded_pill_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/view_recipes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="View Recipes"
            android:tint="@android:color/white"
            android:backgroundTint="#7C4DFF"
            app:srcCompat="@drawable/ic_recipe_book" />

        <TextView
            android:layout_marginTop="8dp"
            android:text="View Recipes"
            android:textColor="#7C4DFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
