<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Title TextView with violet color -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VeggieSpot"
        android:textColor="#7C4DFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_pulse_animation"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera_placeholder"
        android:contentDescription="Camera preview placeholder" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCaptureUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_camera"
        app:tint="#7C4DFF"
        android:contentDescription="Capture or Upload Button" />

</RelativeLayout>
